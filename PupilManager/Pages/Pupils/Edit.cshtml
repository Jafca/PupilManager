@page
@model PupilManager.Pages.Pupils.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Pupil</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Pupil.ID" />
            <div class="form-group">
                <label asp-for="Pupil.FirstNames" class="control-label"></label>
                <input asp-for="Pupil.FirstNames" class="form-control" />
                <span asp-validation-for="Pupil.FirstNames" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pupil.LastName" class="control-label"></label>
                <input asp-for="Pupil.LastName" class="form-control" />
                <span asp-validation-for="Pupil.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pupil.DOB" class="control-label"></label>
                <input asp-for="Pupil.DOB" class="form-control" />
                <span asp-validation-for="Pupil.DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pupil.Gender" class="control-label"></label>
                <input asp-for="Pupil.Gender" type="radio" value="false" />Boy
                <input asp-for="Pupil.Gender" type="radio" value="true" />Girl
            </div>
            <div class="form-group">
                <label asp-for="Pupil.MedicalConditions" class="control-label"></label>
                <input asp-for="Pupil.MedicalConditions" class="form-control" />
                <span asp-validation-for="Pupil.MedicalConditions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
