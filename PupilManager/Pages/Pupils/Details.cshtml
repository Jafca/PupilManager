@page
@model PupilManager.Pages.Pupils.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Pupil</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Pupil.FirstNames)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Pupil.FirstNames)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Pupil.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Pupil.LastName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Pupil.DOB)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Pupil.DOB)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Pupil.Gender)
        </dt>
        <dd>
            @if (Model.Pupil.Gender)
            {
                @Html.Raw("Girl");
            }
            else
            {
                @Html.Raw("Boy");
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Pupil.MedicalConditions)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Pupil.MedicalConditions)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Pupil.ID">Edit</a> |
